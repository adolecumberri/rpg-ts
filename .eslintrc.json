{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["google"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 15,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "quotes": [2, "single", { "avoidEscape": true }],
    "max-len": [
      "error",
      {
        "code": 140,
        "tabWidth": 4,
        "ignoreComments": true //"comments": 80
      }
    ],
    "indent": ["error", 4],
    "require-jsdoc": "off",
    "no-unused-vars": "off",
    "camelcase": "off",
    "valid-jsdoc": "off",
    "linebreak-style": "off",
    "object-curly-spacing": "off",
    "space-before-function-paren": "off"
  },
  "ignorePatterns": ["dist", "node_modules"]
}
